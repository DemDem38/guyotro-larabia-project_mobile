<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChoixMatiereActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choisissez votre matiÃ¨re !"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/goMaths"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/operation_mahts_module"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:onClick="navigationToMaths"/>

    <ImageView
        android:id="@+id/goFr"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/fr_module"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:onClick="navigationToFr"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text"
        android:onClick="ajouter_question"/>

</LinearLayout>