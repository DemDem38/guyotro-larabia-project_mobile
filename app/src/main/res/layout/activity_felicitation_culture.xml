<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FelicitationCultureActivity">

    <TextView
        android:id="@+id/text_felcitation_culuture_resultat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:text="Ecrire résultat de l'exercice"
        android:textSize="25dp"
        android:layout_margin="10dp"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/meilleurScore"
        android:layout_below="@+id/text_felcitation_culuture_resultat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:text="Meilleur score : Aucun"
        android:textSize="15dp"
        android:layout_margin="10dp"
        android:gravity="center_horizontal" />


    <Button
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:text="Choix d'un autre thème"
        android:onClick="navigationToModuleCulture"
        />



</RelativeLayout>